@model OrangeBricks.Web.Controllers.Property.ViewModels.ViewingViewModel
@{
	ViewBag.Title = "BookViewing";
}

<h2>Book Viewing</h2>

<p>When would you like to view  @Model.StreetName?</p>

@using (Html.BeginForm("BookViewing", "Property", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
	<div class="form-group">
		@Html.LabelFor(m => m.Date, "Date of viewing", new { @class = "col-md-2 control-label" })
		<div class="col-md-10">
			@Html.Hidden("PropertyId", Model.PropertyId)
			@Html.TextBoxFor(m => m.Date, new { data_format = "dd/MM/yyyy", @class = "form-control datepicker", placeholder = "DD/MM/YYYY" })
		</div>
	</div>
	<div class="form-group">
		@Html.LabelFor(m => m.Time, "Time of viewing", new { @class = "col-md-2 control-label" })
		<div class="col-md-10">
			@Html.TextBoxFor(m => m.Time, new { @type = "string", @class = "form-control", placeholder = "hh:mm" })
		</div>
	</div>

	<div class="form-group">
		<div class="col-md-offset-2 col-md-10">
			<input type="submit" class="btn btn-default" value="Requst Viewing" />
		</div>
	</div>
}
